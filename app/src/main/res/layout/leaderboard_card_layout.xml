<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    app:cardBackgroundColor="#eedcc5"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:columnWidth="90dp"
        android:layout_gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:orientation="horizontal"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rank_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="#5d3f32"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rank_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carter Chen"
                android:textColor="#5d3f32"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rank_score"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:paddingVertical="4dp"
                android:text="200"
                android:gravity="center"
                android:textSize="22dp"
                android:background="@drawable/rounded_border_transparent"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>