<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    app:cardBackgroundColor="#eedcc5"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:columnWidth="90dp"
        android:layout_gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/idProphetQuizTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quiz_title"
                android:textColor="#5d3f32"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idProphetQuizDes"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/quiz_desc" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/idQuizDetailBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/ic_action_arrow"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>