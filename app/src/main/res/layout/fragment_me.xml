<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EBE3">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="384dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_border_account_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/fragment_me_photo"
        android:layout_width="97dp"
        android:layout_height="107dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@+id/recyclerView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_avatar2" />

    <TextView
        android:id="@+id/fragment_me_text_username"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:editable="false"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:text="TextView"
        android:textAllCaps="false"
        android:textColor="#F1F0F0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragment_me_photo"
        app:layout_constraintTop_toTopOf="@+id/recyclerView" />

    <ImageButton
        android:id="@+id/fragment_me_button_account_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:background="@drawable/ic_action_arrow"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView"
        app:layout_constraintStart_toEndOf="@+id/fragment_me_photo"
        app:layout_constraintTop_toTopOf="@+id/recyclerView"
        app:layout_constraintVertical_bias="0.552" />

    <Button
        android:id="@+id/fragment_me_button_account_login"
        android:layout_width="134dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#6AA571"
        android:text="Sign on/in"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/fragment_me_photo"
        app:layout_constraintTop_toBottomOf="@+id/fragment_me_text_username" />

    <TextView
        android:id="@+id/fragment_me_text_email"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:textAllCaps="false"
        android:textColor="#F1F0F0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragment_me_imageView_Email"
        app:layout_constraintTop_toBottomOf="@+id/fragment_me_text_username" />

    <Button
        android:id="@+id/fragment_me_button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#6AA571"
        android:text="Logout"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_me_button_about"
        app:layout_constraintVertical_bias="0.435" />

    <ImageView
        android:id="@+id/fragment_me_imageView_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_me_photo"
        app:layout_constraintTop_toBottomOf="@+id/fragment_me_text_username"
        app:srcCompat="@android:drawable/sym_action_email" />

    <Button
        android:id="@+id/fragment_me_button_my_quIz_list"
        android:layout_width="373dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_border_account_item"
        android:backgroundTint="#F2DCC2"
        android:drawableLeft="@drawable/ic_list"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:singleLine="false"
        android:text="My Quiz List"
        android:textAllCaps="false"
        android:textColor="#5d3f32"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <Button
        android:id="@+id/fragment_me_button_legal_notice"
        android:layout_width="373dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border_account_item"
        android:backgroundTint="#F2DCC2"
        android:drawableLeft="@drawable/ic_policy"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Legal Notice"
        android:textAllCaps="false"
        android:textColor="#5d3f32"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_me_button_my_quIz_list" />

    <Button
        android:id="@+id/fragment_me_button_terms"
        android:layout_width="373dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border_account_item"
        android:backgroundTint="#F2DCC2"
        android:drawableLeft="@drawable/ic_policy"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Terms of Use"
        android:textAllCaps="false"
        android:textColor="#5d3f32"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_me_button_legal_notice" />

    <Button
        android:id="@+id/fragment_me_button_about"
        android:layout_width="373dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border_account_item"
        android:backgroundTint="#F2DCC2"
        android:drawableLeft="@drawable/ic_info"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:singleLine="false"
        android:text="About"
        android:textAllCaps="false"
        android:textColor="#5d3f32"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_me_button_terms" />


</androidx.constraintlayout.widget.ConstraintLayout>