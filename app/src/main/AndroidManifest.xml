<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orange.prophet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Prophet"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name="com.orange.prophet.ProphetApplication">
        <activity
            android:name="com.orange.prophet.ui.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.orange.prophet.ui.QuizDetailActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name="com.orange.prophet.ui.LoginActivity">
        </activity>
        <activity android:name="com.orange.prophet.ui.AccountDetailActivity">
        </activity>
        <activity android:name="com.orange.prophet.ui.AccountInfoEditActivity">
        </activity>
        <activity android:name="com.orange.prophet.ui.AccountPasswordChangeActivity">
        </activity>
        <activity android:name="com.orange.prophet.ui.AboutActivity">
        </activity>
        <activity android:name="com.orange.prophet.ui.MyQuizListActivity">
        </activity>
        <activity android:name="com.orange.prophet.ui.WebViewActivity">
        </activity>
        <activity
            android:name="com.orange.prophet.ui.PZSplashscreenActivity"
            android:configChanges="screenSize"
            android:label="@string/app_name"
            android:theme="@style/PZ.Splashscreen.Night">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>